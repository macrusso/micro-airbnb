<% include ../partials/header.ejs %>


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">uAirbnb</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= place.photo %>">
                <div class="caption-full">
                    <h4 class="pull-right">Â£<%= place.price %>/night</h4>
                    <h4 class="pull-left"><a><%=place.name%></a></h4>
                    <p><%= place.info %></p>
                    <p><em>Submited by <%=place.author.username%>, <%= moment(place.createdAt).fromNow() %></em></p>
                    <% if(currentUser && place.author.id.equals(currentUser._id)){ %>
                        <a href="/places/<%=place._id%>/edit" class="btn btn-warning" role="button">Edit</a>
                        <form method="post" action="/places/<%=place._id%>?_method=DELETE" id="methodOverrideForm">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <a href="/places/<%=place._id%>/comments/new" class="btn btn-success" role="button">Add a comment</a>
                <hr>
                <% place.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            Posted by: <strong><%= comment.author.username %></strong>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a href="/places/<%=place._id%>/comments/<%=comment._id%>/edit" class="btn btn-warning btn-xs" role="button">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                </a>
                                <form method="post" action="/places/<%=place._id%>/comments/<%=comment._id%>?_method=DELETE" id="methodOverrideForm">
                                    <button type="submit" class="btn btn-danger btn-xs">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </button>
                                </form>
                            <% } %>
                            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


<script>
  function initMap() {
    var lat = <%= place.lat %>;
    var lng = <%= place.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= place.name %><br /></strong>
      <%= place.location %>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDe9-QNI3PZsyKEkAD0iOZtVNyP18OgO3w&callback=initMap"></script>


