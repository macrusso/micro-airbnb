<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">You are editing the <%=place.name%></h1>
        <div style="margin: 25px auto;">
            <form method="post" action="/places/<%=place._id%>?_method=PUT">
                <div class="form-group">
                    <label for="placeName">Name</label>
                    <input type="text" class="form-control" id="placeName" name="name" value="<%=place.name%>">
                </div>
                <div class="form-group">
                    <label for="placeLocation">Location</label>
                    <input class="form-control" type="text" id="placeLocation" name="location" value="<%=place.location%>">
                </div>
                <div class="form-group">
                    <label for="placePrice">Price per night</label>
                    <input type="number" class="form-control" id="placePrice" placeholder="Â£00.00" name="price" min='0.0' step='0.1'>
                </div>
                <div class="form-group">
                    <label for="placePhoto">Link to photo</label>
                    <input type="text" class="form-control" id="placePhoto" name="photo" value="<%=place.photo%>">
                </div>
                <div class="form-group">
                    <label for="placeInfo">Description</label>
                    <input type="text" class="form-control" id="placeInfo" name="info" value="<%=place.info%>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    <p><a href="/places">Go back</a></p>
                </div>
            </form>
        </div>
    </div>
</div>





