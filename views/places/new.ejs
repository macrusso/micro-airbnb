<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new place</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form method="post" action="/places/">
                <div class="form-group">
                    <label for="placeName">Name</label>
                    <input type="text" class="form-control" id="placeName" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <label for="placePhoto">Link to photo</label>
                    <input type="text" class="form-control" id="placePhoto" placeholder="Photo" name="photo">
                </div>
                <div class="form-group">
                    <label for="placeInfo">Description</label>
                    <input type="text" class="form-control" id="placeInfo" placeholder="More info"name="info">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    <p><a href="/places">Go back</a></p>
                </div>
            </form>
        </div>
    </div>
</div>





