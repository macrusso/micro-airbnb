<% include ../partials/header.ejs %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit your comment</h1>
        <div style="margin: 25px auto;">
            <form method="post" action="/places/<%=place_id%>/comments/<%=comment._id%>?_method=PUT">
                <div class="form-group">
                    <label for="commentText">Your comment</label>
                    <input type="text" class="form-control" id="commentText" placeholder="comment" name="text" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    <p><a href="/places/<%=place_id%>">Go back</a></p>
                </div>
            </form>
        </div>
    </div>
</div>


